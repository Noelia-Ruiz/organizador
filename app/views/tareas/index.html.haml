        %td= tarea.categoria
        %td= link_to 'Show', tarea
        %td= link_to 'Edit', edit_tarea_path(tarea)
        %td= link_to 'Destroy', tarea, :method => :delete, :data => { :confirm => 'Are you sure?' }

